<AnchorPane fx:id="rootPane" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: aliceblue;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exam.Authorization">
   <children>
      <Label layoutX="276.0" layoutY="72.0" text="Авторизация">
         <font>
            <Font name="Comic Sans MS" size="24.0" />
         </font></Label>
      <Label fx:id="labelError" alignment="CENTER" layoutX="250.0" layoutY="323.0" prefHeight="17.0" prefWidth="202.0" textAlignment="CENTER" textFill="RED" />
      <ImageView fx:id="imageClose" fitHeight="44.0" fitWidth="44.0" layoutX="642.0" layoutY="14.0" onMouseClicked="#onBackPressed" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/close.png" />
         </image>
      </ImageView>
      <TextField fx:id="textFieldLogin" layoutX="254.0" layoutY="185.0" prefHeight="35.0" prefWidth="193.0" stylesheets="@style.css">
         <styleClass>
            <String fx:value="border" />
